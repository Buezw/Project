module hex8_to_dec3 (hex_in, tens, ones);
    input  [7:0] hex_in;        
    output [3:0] hundreds;     
    output [3:0] tens;         
    output [3:0] ones;  

    reg [3:0] hundreds;
    reg [3:0] tens;
    reg [3:0] ones;

    reg [7:0] value;

    always @(hex_in)
    begin
        value = hex_in;
        tens = (value % 8'd100) / 8'd10;
        ones = value % 8'd10;
    end
endmodule
